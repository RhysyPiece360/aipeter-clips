extends _layout.pug

include _videocard

block append style
  style.
    .socials i {
      font-size: 3rem;
    }
 
block main
  // jumbotron (top text)
  section.jumbotron.text-center
    .container
      h1.jumbotron-heading= showData.fullname
      p.lead.text-muted= showData.description
      //   | owwww oooof my bones they really hurt ðŸ˜¢ðŸ˜¢ðŸ˜¢

  .container
    .row
      //- show banner
      .col-7
        img.w-100(src='http://placekitten.com/1000/600')
      //- socials for show
      .col-5.socials
        each social in socialLinks
          if (social.link)
            .row
              .col-2
                a(href=social.link style=`color: ${social.iconColor}`)
                  i.bi(class=`bi-${social.icon}`)
              .col-10= social.name

  .album.py-5
    .container
      // .row
      //   // h2 Recently Uploaded
      //   h2 Recent Uploads
      .row
        each post in posts
          +videoCard(post)

  .container
    each post in posts
      each val, index in post
        li= index + ': ' + val
      hr
