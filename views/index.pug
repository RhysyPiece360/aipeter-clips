extends _layout.pug

include _videocard
 
mixin showcard(name)
  // show card to list all shows (mobile only)
  .col-6
    .card.mb-4.box-shadow
      img.card-img-top(src='http://placekitten.com/128/128')
      .card-body
        .btn-group
          button.btn.btn-sm.btn-outline-secondary(type='button')= name

block main
  // jumbotron (top text)
  section.jumbotron.text-center
    .container
      h1.jumbotron-heading AI Show Clips
      p.lead.text-muted
        | owwww oooof my bones they really hurt ðŸ˜¢ðŸ˜¢ðŸ˜¢

  // show cards (mobile only)
  // .container.d-sm-none.text-center
  //   .row
  //     +showcard("Family Guy")
  //     +showcard("Dragon Ball")

  .album.py-5
    .container
      .row
        // h2 Recently Uploaded
        h2 Recent Uploads
      .row
        each post in featuredPosts
          +videoCard(post)

  .container
    each post in featuredPosts
      each val, index in post
        li= index + ': ' + val
      hr
